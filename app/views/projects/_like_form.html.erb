 <% if user_signed_in? %>
	<div id="like_form">
	  <% if current_user.likes_project?(project) %>
	    <%= render 'unlike', project: project %>
	  <% else %>
	    <%= render 'like', project: project %>
	  <% end %>
	</div>
<% end %>